{% extends 'base.html.twig' %}

{% block title %}imvavet{% endblock %}

{% block body %}
    <main id="main" data-name="title" class="flex-grow cursor-default bg-blue-900">
        <div class="w-full max-w-6xl mx-auto bg-white rounded shadow mt-10 md:mt-20">
            <!-- Onglets -->
            <div class="w-full max-w-6xl mx-auto bg-white rounded shadow">
                <!-- Onglets -->
                <div class="flex flex-wrap border-b">
                    <button
                        class="tab-button flex-1 py-2 px-4 text-center text-gray-600 hover:bg-gray-200 active:bg-gray-300 border-b-2"
                        data-tab="tab1"
                    >
                        Tous les vaccins
                    </button>
                    <button
                        class="tab-button flex-1 py-2 px-4 text-center text-gray-600 hover:bg-gray-200 active:bg-gray-300 border-b-2"
                        data-tab="tab2"
                    >
                        Aviaire
                    </button>

                    <button
                        class="tab-button flex-1 py-2 px-4 text-center text-gray-600 hover:bg-gray-200 active:bg-gray-300 border-b-2"
                        data-tab="tab3"
                    >
                        Porcine
                    </button>

                    <button
                        class="tab-button flex-1 py-2 px-4 text-center text-gray-600 hover:bg-gray-200 active:bg-gray-300 border-b-2"
                        data-tab="tab4"
                    >
                        Rimunant
                    </button>
                   
                   <button
                        class="tab-button flex-1 py-2 px-4 text-center text-gray-600 hover:bg-gray-200 active:bg-gray-300 border-b-2"
                        data-tab="tab5"
                    >
                        Canine
                    </button>

                </div>

                <!-- Contenus -->
                <div class="p-8">
                    <div class="tab-content hidden" id="tab1">    
                        {% if vaccines is not empty %}
                            <div class = "flex flex-wrap gap-2 justify-center">
                                {% for vaccine in vaccines %}  
                                    <a href="{{ path('vaccine_show', {id: vaccine.id}) }}" class="pb-4">
                                        <div class="flex justify-center">
                                                {% if vaccine.vaccineImages is not empty %}
                                                    <img src="{{ asset('uploads/images/vaccine/' ~ vaccine.vaccineImages[0].imageName) }}" alt="Image du vaccin" style="max-width: 70%;" class="rounded hover:scale-105 transition-transform duration-300">
                                                {% endif %}
                                            </div>
                                            <div class="flex justify-center mt-2">
                                                {{ vaccine.name|raw }}
                                            </div>
                                    </a>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p>Aucun vaccin trouvé.</p>
                        {% endif %}
                    </div>

                    <div class="tab-content hidden" id="tab2">    
                        {% if vaccines is not empty %} 
                            {% if gameAviaire is not empty %}
                            <div class = "flex flex-wrap gap-2 justify-center">
                                {% for vaccine in gameAviaire %}
                                    <a href="{{ path('vaccine_show', {id: vaccine.id}) }}" class="pb-4">
                                        <div class="flex justify-center">
                                                {% if vaccine.vaccineImages is not empty %}
                                                    <img src="{{ asset('uploads/images/vaccine/' ~ vaccine.vaccineImages[0].imageName) }}" alt="Image du vaccin" style="max-width: 70%;" class="rounded hover:scale-105 transition-transform duration-300">
                                                {% endif %}
                                            </div>
