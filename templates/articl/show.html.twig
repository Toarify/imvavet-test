{% extends 'base.html.twig' %}

{% block title %} {{ article.name|raw }} {% endblock %}

{% block body %}
    <h1>{{ article.name|raw }}</h1>

    {% if article.articleImages is not empty %}
        {% for image in article.articleImages %}
            <img src="{{ asset('uploads/images/article/' ~ image.imageName) }}" alt="Image de l'article" style="max-width: 300px;">
        {% endfor %}
    {% else %}
        <p>Aucune image disponible.</p>
    {% endif %}

    {% if article.details %}
        <p><strong>Auteur :</strong> {{ article.details.authors }}</p>
        <p><strong>Date de publication :</strong> {{ article.details.publicationDate|date('d/m/Y') }}</p>
    {% else %}
        <p>Aucun détail disponible pour cet article.</p>
    {% endif %}
    
    <a href="{{ path('articles_list') }}">Retour à la liste</a>
{% endblock %}
